/*字体及字体大小需修改"*/
page {
  background: #f6f6f6;
}

/* 记录成功的图标样式 */
.recorded-success {
  margin-top: 28rpx; 
  background-color: #fff;
  width: 100%;
  height: 513rpx;
}

.success-show {
  margin: 0 auto;
  width: 162rpx;
  height: 162rpx;
  padding-top: 60rpx;
}

.success-bg {
  width: 162rpx;
  height: 162rpx;
  border-radius: 100%;
  background: linear-gradient(135deg,#04e1cb,#15e68a);
}

.success-icon {
  width: 86rpx;
  height: 60rpx;
  margin-left: 38rpx; 
  margin-top: 51rpx;
}

/* 记录成功的文字样式 */
.recorded-text1 {
  margin-top: 30rpx; 
  height: 32rpx;
  line-height: 32rpx;
  font-size: 32rpx;
  width: 100%;
  color: #15e68a;
  text-align: center; 
}

.recorded-text2 {
  margin-top: 30rpx;
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 32rpx;
  text-align: center; 
  color: #333;
}

/* 返回主界面及查看积分按钮样式 */
.recorded-btn-bar {
  margin: 0 auto;
  margin-top: 64rpx;
  height: 66rpx;
  width: 540rpx;
}

.recorded-btn {
  width: 240rpx;
  height: 66rpx;
  line-height: 66rpx;
  color: #11e598;
  font-size: 32rpx;
  border: 1px solid #11e598;
  background: #fff;
  text-align: center;
  border-radius: 10px;
}

.home-btn {
  float: left;
}

.rank-btn {
  float: right;
}

/* 记录界面广告的样式 */
.recorded-adv{
  margin-top: 30rpx;
  width: 100%;
  height: 242rpx;
}
 
.recorded-adv image {
  width: 100%;
  height: 242rpx;
} 

